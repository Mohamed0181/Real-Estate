<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--Tree view-->
    <record id="property_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <list class="header_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="active" invisible="1"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="is_late" invisible="True"/>
                <field name="garage" optional="1"/>
            </list>
        </field>
    </record>


      <!-- Form View -->
    <record id="property_form_view" model="ir.ui.view">
        <field name="name">property Form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_related_owner"
                                type="object"
                                icon="fa-user"
                                string="Owner"
                                invisible="not owner_id"
                        />
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state != 'sold'"/>
                    <header>

                        <button name="action" type="object" class="btn-primary" string="Action"/>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"
                                invisible="state in('draft','close')"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Pending"
                                invisible="state!='draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                                invisible="state!= 'pending'"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref" readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h2>
                            <field name="name" readonly="state != 'draft'"/>
                        </h2>
                    </div>
                    <group>
                       <group string="info1">
                           <field name="postcode" readonly="state =='close'"/>
                           <field name="expected_price" readonly="state =='close'"/>
                            <field name="selling_price" readonly="state =='close'"/>
                           <field name="diff"/>
                           <field name="owner_id" readonly="state =='close'"/>
                           <field name="date_availability" readonly="state =='close'"/>
                           <field name="create_time"/>
                           <field name="next_time" groups="app_one.property_manager_group"/>
                           <field name="expected_selling_date" readonly="state =='close'"/>


                       </group>
                        <group string="info2">
                            <field name="owner_phone" readonly="state =='close'"/>
                            <field name="owner_address" readonly="state =='close'"/>
                            <field name="is_late" invisible="True"/>
                             <field name="description" readonly="state =='close'"/>
                            <field name="garage" readonly="state =='close'"/>
                            <field name="tag_ids" widget="many2many_tags" readonly="state =='close'"/>
                            <field name="active"/>
                        </group>
                    </group>
                      <notebook>
                            <page string="Bedrooms">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="description"/>
                                        <field name="area"/>
                                    </list>
                                </field>
                            </page>
                      </notebook>
                 </sheet>
                
                <chatter class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>


         <!--  Action Server -->
    <record id="property_action_server_closed" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_close()
        </field>
    </record>
    <record id="property_change_state_action_server" model="ir.actions.server">
        <field name="name">Change State</field>
        <field name="model_id" ref="model_property"/>
        <field name="binding_model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_state()
        </field>

    </record>

     <!-- Automated Actions -->
    <record id="check_expected_selling_date" model="ir.cron">
        <field name="name">Property: Check selling date cron</field>
        <field name="model_id" ref="model_property"/>
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>


        <!--  Action -->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
        <field name="view_mode">list,form</field>
    </record>

     <!--menu-->
    <menuitem
        id="properties_menu_view"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    />

</odoo>
