<odoo>
    <record id="tag_list" model="ir.ui.view">
      <field name="name">tag list</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="tag_form" model="ir.ui.view">
        <field name="name">tag form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">tag</field>
        <field name="res_model">tag</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem
        id="tag_menu"
        name="tag"
        parent="properties_menu"
        action="tag_action"
    />
</odoo>